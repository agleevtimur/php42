<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('style/style.css') }}" type="text/css" rel="stylesheet"/>
        {% endblock %}
    </head>
    <body>
        {% block body %}
        <h3 class="title">Добро пожаловать в раздел отзывов!</h3>
        <div class="container">
            <section class="form-wrapper">
                    <form class="form" method="post" action="/index.php">
                        <label for="name">Введите свое имя</label>
                        <input type="text" name="name" id="name" required>
                        <label for="comment">Оставьте комментарий</label>
                        <textarea class="form-comment" name="comment" id="comment" required></textarea>
                        <input class="button" type="submit">
                    </form>
            </section>

            <section class="comments">
                <h3 class="comments-title">Комментарии</h3>
                {% for comment in comments %}
                    <div class="comment">
                        <h4>{{ comment.name }}</h4>
                        <p>{{ comment.comment }}</p>
                        <span class='datetime'>{{ comment.date }}</span>
                        <hr>
                    </div>
                {% endfor %}
            </section>
        </div>
        {% endblock %}
    </body>
    {% block javascripts %}
        <script src="{{ asset('javascript/script.js?ver=2') }}"></script>
    {% endblock %}
</html>
